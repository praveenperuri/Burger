

<h2>Burgers to be Devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit">DEVOUR !!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers in your Belly</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

         <form action="/{{this.id}}?_method=DELETE" method="POST">
          <button type="submit">Delete</button>
        </form> 

        
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="bgr">Order your burger here:</label>
    <input type="text" id="bgr" name="name">
    <input type="hidden" name="devoured" value="0">
  </div>

  <button type="submit">Order</button>
</form>
